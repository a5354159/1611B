body,html,page,.main{
    width:100%;
    height:100%;
    background:#ccc;
}
.main{
    display:flex;
    flex-direction:column;
}
.main>.conts{
    flex:1;
}
.contexts{
    width:100%;
}
.contexts>view{
    display:flex;
    margin:30rpx 0;
    padding:0 20rpx;
    box-sizing:border-box;
}
.contexts>view.imgRight{
   flex-direction:row-reverse;
   height:200rpx;
   align-items:center;
}
.contexts>view.imgRight>view{
    background:#0f0;
}
.contexts>view>view{
   flex:1;
   background:#fff;
   line-height:80rpx;
   margin: 0 20rpx;
   border-radius:6rpx; 
   text-align:center;
}
.contexts>view>image{
    width:80rpx;
    height:80rpx;
}
.footer{
  width: 100%;
  height:150rpx;
  padding: 0 60rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background:#fff;
}
.astyle{
  width: 100%;
  height:50rpx;
  display: flex;
  align-items: center;
}
.mina{
  font-size: 30rpx;
}
.standard{
  font-size: 30rpx;
  margin-left: 50rpx;
  color:#979898;
}
.maxa{
  flex: 1;
  display: flex;
  justify-content: flex-end;
  font-size: 50rpx;
}