page{
  width:100%;
  height:100%;
  background:darkblue;
  padding:0 30rpx;
  box-sizing: border-box;
  position:relative;
}
.top{
  width:100%;
  height:400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top image{
  width:300rpx;
  height:300rpx;
  border-radius: 100%;
}
.que{
  width: 100%;
  height:100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.que>text{
  width:80rpx;
  height:80rpx;
  margin:10rpx;
  background:yellow;
  line-height: 80rpx;
  text-align: center;
}
.que>button{
  width:80rpx;
  height:80rpx;
  margin:10rpx;
  font-size:30rpx;
  line-height: 80rpx;
  text-align: center;
  padding:0;
}
.all{
  width:100%;
  height:320rpx;
  display: flex;
  flex-wrap: wrap;
  margin-top:40rpx;
}
.all>text{
  height:80rpx;
  width:76rpx;
  margin:10rpx;
  background:#fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn{
  background:yellow;
  margin-top:40rpx;
}
.mosk{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background:rgba(0,0,0,.3);
  padding:0 120rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.mosk>text{
  color:yellow;
  font-size:80rpx;
  margin:120rpx 80rpx 40rpx;
}
.box{
  width:100%;
  height:400rpx;
  background:#fff;
}
