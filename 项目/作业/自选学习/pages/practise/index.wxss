page, .main {
  width: 100%;
  height: 100%;
}

.main {
  display: flex;
  flex-direction: column;
}

.main>.header {
  width: 100%;
  display: flex;
  background: #f0f0f5;
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 152rpx;
  align-items: center;
}

.main>.header>input {
  flex: 1;
  border-radius: 25rpx;
  background: #ccc;
  height: 88rpx;
  font-size:30rpx; 
  padding: 0 40rpx;
  box-sizing: border-box;
}

.main>.header>view {
  width: 120rpx;
  text-align: right;
  color: #00f;
}
.seaction{
  flex:1;
  background: #FFFFFF;
  overflow: hidden;
}
.tit{
  display: flex;
  justify-content: space-around;
  height: 100rpx;
  align-items: center;
}
.active{
  border-bottom:1px solid #00f; 
  padding: 20rpx 0; 
  color: #00f;
}
.content>view{
  height: 80rxp;
}
.bisa{
  display: flex;
  flex-direction: column;
}
.checkbox{
  height: 80rpx;
  line-height: 80rpx;
}
.ass{
  height: 1000rpx;
}
.mini{
  display: flex;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.mini>view{
  flex: 9;
  font-size:30rpx; 
}