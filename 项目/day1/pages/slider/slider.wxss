page,.wrapper{
  width: 100%;
  height: 100%;
}
.wrapper{
  display: flex;
  flex-direction: column;
}
.main{
  width: 100%;
  flex:1;
  overflow: auto;
  background: #EDEDED;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.mainleft,.mainright{
  display: flex;
  /* height: 80rpx; */

  margin: 20rpx 0;
}
.mainleft{
  width: 100%;
  flex-direction: row-reverse;
}
.mainleft>view,.mainright>view{
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  max-width:480rpx;
  min-height:80rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.mainleft>view{
  margin-right: 30rpx;
  background: #AFE66E;
}
.mainright>view{
  margin-left: 30rpx;
  background: #fff;
}

.mainimage{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}

.footer{
  width: 100%;
  height:200rpx;
  padding: 0 60rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.astyle{
  width: 100%;
  height:50rpx;
  display: flex;
  align-items: center;
}
.mina{
  font-size: 30rpx;
}
.standard{
  font-size: 30rpx;
  margin-left: 50rpx;
  color:#979898;
}
.maxa{
  flex: 1;
  display: flex;
  justify-content: flex-end;
  font-size: 50rpx;
}
