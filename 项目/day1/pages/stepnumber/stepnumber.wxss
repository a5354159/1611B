page,.wrapper{
  width: 100%;
  height: 100%;
}
.wrapper{
  display: flex;
  flex-direction: column;
  overflow: auto;
}
.item{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #E2E8E8;
  border-bottom: 1px solid #E5E6DE;
}
.content{
  display: flex;
  height: 100%;
  justify-content: center;
  flex: 1;
  flex-direction: column;
}
.contenttop{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.contenttop>.name{
  font-size: 32rpx;
}
.step{
  color:#5DAC42;
  font-size:50rpx;
}
.icon{
  width: 35rpx;
  height: 35rpx;
}
.headportrait{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}
.num{
  display: flex;
  align-items: center;
  justify-content: center;
}
.itemright{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 20rpx;
}
.itemright>view{
  width: 100%;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
